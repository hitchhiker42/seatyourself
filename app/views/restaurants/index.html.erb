<h1>All Restaurants</h1>


  <table>

    <tr>
      <th>Restaurant Name</th>
      <th>Address</th>
      <th>Price Range</th>
      <th>Make a Reservation</th>
    </tr>

    <% @restaurants.each do |r| %>

      <tr>
        <td><%= r.name %></td>
        <td><%= r.address %></td>
        <td><%= r.price_range %></td>
        <td><%= link_to "RESERVE", restaurant_path(r.id) %></td> 
      </tr>

    <% end %>

  </table>
