<h1>Sign UP <i>my precious</i></h1>


<%= form_for(@user) do |f| %>
	<div class = "field">
		<%= f.label :firstname %><br/>
		<%= f.text_field :firstname %>
	</div>

	<div class="field">
		<%= f.label :lastname %><br/>
		<%= f.text_field :lastname %>
	</div>

	<div class="field">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>

	<div class="field">
		<%= f.label :password %><br/>
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %><br/>
		<%= f.password_field :password_confirmation %>
	</div>

	<div class="submit">
		<%= f.submit %>
	</div>

<% end %>

